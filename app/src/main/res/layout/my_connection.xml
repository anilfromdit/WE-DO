<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Background"
    android:paddingTop="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"

    >



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="120dp"
        android:src="@drawable/logo"
        android:layout_height="120dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/Background"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_editbutton"
        app:tint="@color/white" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_ver"
        android:layout_width="47dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="296dp"
        android:src="@drawable/check" />

    <TextView
        android:id="@+id/user_username"
        android:layout_width="wrap_content"
        android:text="@string/anilfromdit"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:text="Anil Gulati, "
        android:layout_toEndOf="@+id/user_image"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_age"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:text="19"
        android:layout_alignEnd="@id/user_name"
        android:layout_alignBottom="@+id/user_name"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="-54dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/user_name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/gender"
        android:layout_width="30dp"
        android:src="@drawable/male"
        android:layout_height="30dp"
        android:layout_alignEnd="@id/user_age"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="-30dp"
        android:layout_toEndOf="@+id/user_age"
        android:contentDescription="@string/gender"
        />
    <TextView
        android:id="@+id/user_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginStart="3dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@id/user_image"
        android:textColor="@color/white"
        android:text="Hello, I hope This You're Fine "
        android:maxWidth="200dp"
        android:textSize="18sp" />

<!--    <de.hdodenhof.circleimageview.CircleImageView-->
<!--        android:id="@+id/dissolve_btn"-->
<!--        android:layout_width="55dp"-->

<!--        android:layout_height="40dp"-->
<!--        android:layout_below="@id/user_age"-->
<!--        android:layout_marginStart="23dp"-->
<!--        android:layout_marginTop="28dp"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:layout_marginEnd="10dp"-->
<!--        />-->

    <Button
        android:id="@+id/dissolve_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Dissolve"
        android:layout_below="@id/user_age"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/Background"
        android:layout_marginStart="23dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="10dp"
        android:drawableTop="@drawable/ic_dissolve" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:layout_below="@id/user_username"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:padding="5dp"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Hello"

        android:textColor="@color/white"
        android:layout_below="@id/view"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/view"
        android:padding="5dp"
        android:layout_alignParentRight="true"
android:src="@drawable/rightarrow"
        app:tint="@color/white"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="10dp" />


</RelativeLayout>